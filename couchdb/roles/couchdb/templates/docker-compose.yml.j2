version: "3.6"

services:
  couchdb:
    image: apache/couchdb:latest
    environment:
      - COUCHDB_USER={{ database_user }}
      - COUCHDB_PASSWORD={{ database_password }}
      - NODENAME={{ ansible_default_ipv4.address }}
      - ERL_FLAGS=-setcookie "{{ database_cookie }}"
    ports:
      - "5984:5984"
      - "4369:4369"
      - "9100-9200:9100-9200"
    volumes:
      - {{ couchdb_dir }}:/opt/couchdb/data
